@model System.Collections.Generic.List< WAppDomainBase.Models.Photo>;
@{
    ViewData["Title"] = "Search Albums";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<h4>Test Search Engine Counting</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="">
            <div class="form-group">
                <div class="table">
                    <table>
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].AlbumId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model[0].CreationDate)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelitem => item.AlbumId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelitem => item.CreationDate)
                                </td>
                                <td>
                                    <button onclick="showComments()">Ver Comentarios</button>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </form>
        <form asp-action="">
            <p id="comments">

            </p>
            <script>
                function showComments() {
                    document.getElementById("comments").innerHTML = "hello";
                }
                
            </script>
        </form>
    </div>
</div>